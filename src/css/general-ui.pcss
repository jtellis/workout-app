.base-btn {
    @apply mb-6 bg-gray-100 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-800 font-semibold leading-tight;
}

.neutral-act-btn {
    @apply base-btn bg-gray-400;
}

.pos-act-btn {
    @apply base-btn bg-green-400;
}

.neg-act-btn {
    @apply base-btn bg-red-400
}
